<!-- see logback.qos.ch/manual/configuration.html -->
<configuration debug="false" scan="true" scanPeriod="30 seconds">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>application.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <logger name="scalikejdbc.ConnectionPool" level="INFO"/>
    <logger name="scalikejdbc.StatementExecutor" level="INFO"/>
    <logger name="com.amazonaws" level="ERROR"/>
    <logger name="org.apache.http" level="INFO" />
    <logger name="YahooFinance" level="ERROR" />
    <logger name="yahoofinance.YahooFinance" level="ERROR" />
    <logger name="yahoofinance.histquotes.HistQuotesRequest" level="ERROR" />


</configuration>
